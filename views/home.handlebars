 <div class="conteiner-flex">
 {{> nav-bar user=user }}
 </div>
 
<div class="container">
<div class='row mt-5 d-flex justify-content-center'>
  <div class='col-sm-12 col-lg-4'>
    <form method='POST' action='/login'>
      <div class='row mb-4'>
        <label class='col-sm-12 col-lg-4 col-form-label'>username</label>
        <div class='col-sm-12'>
          <input
          required
            name='username'
            type='text'
            class='form-control'
            id='inputPart'
          />
        </div>
      </div>
      <div class='row mb-4'>
        <label class='col-sm-12 col-lg-6 col-form-label'>password</label>
        <div class='col-sm-12'>
          <input
          required
            name='password'
            type='password'
            class='form-control'
            id='inputDescription'
          />
        </div>
      </div>
      <div class='d-flex justify-content-center'>
        <button type='submit' class='btn btn-dark'>Login</button>
      </div>
    </form>
  </div>
</div>
</div>