<div class="container">
<div class='row mt-5'>
  <div class='col text-center'>
    <h1>Add part</h1>
  </div>
</div>
<div class='row mt-5 d-flex justify-content-center'>
  <div class='col-lg-6 col-sm-9 shadow-lg p-5 rounded'>
    <form method='POST' action='/addpart-process'>
      <div class='row mb-4'>
        <label class='col-sm-3 col-form-label'>Part</label>
        <div class='col-sm-9'>
          <input required name='part' type='text' class='form-control' id='inputPart' />
        </div>
      </div>
      <div class='row mb-4'>
        <label class='col-sm-3 col-form-label' >Description</label>
        <div class='col-sm-9'>
          <input
          required
            name='description'
            type='text'
            class='form-control'
            id='inputDescription'
          />
        </div>
      </div>
      <div class='d-flex justify-content-center'>
        <button type='submit' class='btn btn-success'>Add part</button>
      </div>
    </form>
  </div>
</div>
</div>