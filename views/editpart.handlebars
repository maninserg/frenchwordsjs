 <div class="conteiner-flex">
 {{> nav-bar}}
 </div>
 
<div class="container">
<div class='row mt-5'>
  <div class='col text-center'>
    <h1>Edit part:
      <span
        class='text-decoration-underline'
      >{{part.dataValues.part}}</span></h1>
  </div>
</div>

<div class='row mt-5 d-flex justify-content-center'>
  <div class='col-6 shadow-lg p-5 rounded'>
    <form method='POST' action='/editpart-process/{{part.dataValues.id}}'>
      <div class='row mb-4'>
        <label class='col-sm-3 col-form-label'>Part</label>
        <div class='col-sm-9'>
          <input
            name='part'
            type='text'
            value='{{part.dataValues.part}}'
            class='form-control'
            id='inputWord'
          />
        </div>
      </div>
      <div class='row mb-3'>
        <label
          for='inputTranscription'
          class='col-sm-3 col-form-label'
        >Description</label>
        <div class='col-sm-9'>
          <input
            value='{{part.dataValues.description}}'
            name='description'
            type='text'
            class='form-control'
            id='inputTranscription'
          />
        </div>
      </div>
      <div class='d-flex justify-content-center'>
        <button type='submit' class='btn btn-success'>Save changes</button>
      </div>
    </form>
  </div>
</div>
</div>