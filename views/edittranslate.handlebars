 <div class="conteiner-flex">
 {{> nav-bar}}
 </div>
 
<div class="container">
<div class='row mt-5'>
  <div class='col text-center'>
    <h1>Edit translate:
      <span
        class='text-decoration-underline'
      >{{translate.dataValues.translate}}</span></h1>
  </div>
</div>

<div class='row mt-5 d-flex justify-content-center'>
  <div class='col-6 shadow-lg p-5 rounded'>
    <form
      method='POST'
      action='/edittranslate-process/{{translate.dataValues.id}}'
    >
      <div class='row mb-4'>
        <label class='col-sm-3 col-form-label'>Translate</label>
        <div class='col-sm-9'>
          <input
            name='translate'
            type='text'
            value='{{translate.dataValues.translate}}'
            class='form-control'
            id='inputWord'
          />
        </div>
      </div>
      <div class='d-flex justify-content-center'>
        <button type='submit' class='btn btn-info'>Save changes</button>
      </div>
    </form>
  </div>
</div>
</div>